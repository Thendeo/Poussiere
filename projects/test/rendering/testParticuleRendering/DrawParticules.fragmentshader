#version 330 core

// Valeurs interpolées à partir du vertex shader
in vec2 tex_coord; 
 
// Données en sortie
out vec4 color; 
 
// Valeurs qui sont constantes pour l'ensemble du modèle.
uniform sampler2D myTextureSampler2; 

void main()
{

	vec4 texel = texture(myTextureSampler2, tex_coord).rgba;
	//if(texel.a < 0.6)
	//	discard;
	// coordonnées UV spécifiées
	// temp grey
	vec4 l_color = vec4(0.5f, 0.5f, 0.5f, 1.0f);
	color = texel;

}