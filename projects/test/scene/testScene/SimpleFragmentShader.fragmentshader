#version 330 core

// Valeurs interpolées à partir du vertex shader
in vec2 UV; 
 
// Données en sortie
out vec4 color; 
 
// Valeurs qui sont constantes pour l'ensemble du modèle.
uniform sampler2D myTextureSampler; 

void main()
{

	// coordonnées UV spécifiées
    color.rgb = texture( myTextureSampler, UV ).rgb; 
	color.a = texture( myTextureSampler, UV ).r;

}